    "url": "https://github.com/mobieus10036/azure-cost-analyzer.git"
  },
  "keywords": [
    "azure",
    "cost-management",
    "finops",
    "cloud-costs",
    "cost-optimization",
    "azure-cost-analysis",
    "cost-tracking",
    "azure-sdk"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mobieus10036/azure-cost-analyzer/issues"
  },
  "homepage": "https://github.com/mobieus10036/azure-cost-analyzer#readme",
