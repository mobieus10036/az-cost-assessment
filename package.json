{
  "name": "azure-cost-analyzer",
  "version": "1.0.0",
  "description": "A comprehensive Azure cost analysis tool for tracking spending, identifying trends, and optimizing cloud costs.",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "test": "jest",
    "build": "tsc",
    "seed": "ts-node scripts/seed-data.ts",
    "setup-cosmosdb": "ts-node scripts/setup-cosmosdb.ts",
    "dev": "ts-node-dev --respawn src/app.ts",
    "validate": "node scripts/validate-setup.js",
    "setup": "npm install && node scripts/validate-setup.js"
  },
  "dependencies": {
    "@azure/arm-compute": "^23.1.0",
    "@azure/arm-costmanagement": "1.0.0-beta.2",
    "@azure/arm-monitor": "^8.0.0-beta.6",
    "@azure/arm-resources": "^5.2.0",
    "@azure/arm-subscriptions": "^5.1.0",
    "@azure/data-tables": "^13.3.0",
    "@azure/identity": "^4.5.0",
    "@azure/storage-blob": "^12.25.0",
    "config": "^3.3.12",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "uuid": "^13.0.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "license": "MIT"
}
